<div>
    <table class="table">
        <tr>
            <th>編號</th>
            <th>內容</th>
            <th>操作</th>
        </tr>
            @if(Model != null)
            {
                foreach (var item in Model.Chat_List)
                {
                    <tr>
                        <td id="id">@item.id</td>
                        <td><div id="name">@item.content</div></td>
                        <td>
                            <div id="operate">
                                <button class="btn btn-secondary" type="button" onclick="Edit(this)">修改</button>
                                <button class="btn btn-danger" type="button" onclick="delete_user(@item.id)">刪除</button>
                            </div>
                            <div id="edit" class="d-none">
                                <button class="btn btn-success" type="button" onclick="Modify(this)">儲存</button>
                                <button class="btn btn-secondary" type="button" onclick="Cancel(this)">取消</button>
                            </div>
                        </td>
                    </tr>
                }
            }
    </table>
</div>

@* AddModal *@
<partial name="./Add" />

<script>
    function delete_user(id){
        swal({
            title: "確定刪除?",
            text: "刪除之後將無法復原",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        }).then(willDelete => {
            if(willDelete){
                $.ajax({
                    url : '@Url.Action("Delete", "Chat")',
                    data : { "id" : id },
                    type : "POST",
                    success : function(data){
                        if(data.result == "success"){
                            swal('刪除成功', '', 'success').then(function(){
                                location.href = '@Url.Action("Index", "Chat")'
                            })
                        }
                        else{
                            swal('刪除失敗', data.message, 'error').then(function(){
                                location.href = '@Url.Action("Index", "Chat")'
                            })
                        }
                        
                    }
                });
            }
        })
        
    }

    function Edit(btn){
        let form = $(btn).closest("tr")
        let name = form.find("#name")
        let name_value = $(name).html()
        $(name).html(`<input class="form-control" id="modify_name" value=${name_value} />`)
        form.find("#operate").attr("class", "d-none")
        form.find("#edit").attr("class", "")
    }

    function Modify(btn){
        let tr = $(btn).closest("tr")
        $.ajax({
            url: "@Url.Action("Modify", "Chat")",
            type: "POST",
            data: { "id" : tr.find("#id").html(), "content" : tr.find("#modify_name").val() },
            success: function(data){
                if(data.result == "success"){
                    swal('修改成功', '', 'success').then(function(){
                        location.href = '@Url.Action("Index", "Chat")'
                    })
                }
                else{
                    swal('修改失敗', data.message, 'error').then(function(){
                        location.href = '@Url.Action("Index", "Chat")'
                    })
                }
            }
        })
    }

    function Cancel(btn){
        let form = $(btn).closest("tr")
        form.find("#name").html(`${form.find("#modify_name").val()}`)
        form.find("#operate").attr("class", "")
        form.find("#edit").attr("class", "d-none")
    }
</script>